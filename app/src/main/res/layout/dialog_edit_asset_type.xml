<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/assets_edit_asset_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/assets_edit_asset_type_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.2"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/assets_edit_asset_type_cancel_button"
            android:layout_height="64dp"
            android:layout_width="64dp"
            android:background="@drawable/shape_circle"
            android:layout_gravity="center"
            app:backgroundTint="@color/light_grey"
            app:icon="@drawable/ic_cancel"
            app:iconSize="32dp"
            app:iconTint="@color/dark_grey"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.4"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/assets_edit_asset_type_delete_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape_circle"
            app:backgroundTint="@color/red"
            app:icon="@drawable/ic_delete"
            app:iconSize="32dp"
            app:iconTint="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/assets_edit_asset_type" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.2"/>

    </LinearLayout>

</LinearLayout>